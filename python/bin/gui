#!/usr/bin/env python
import _localpaths
from mocap_bridge.gui.manager_view import ManagerView

class Runner:
    def __init__(self):
        self.setup() # auto-setup

    def setup(self):
        self.view = ManagerView()
        self.view.setup()
        self.status = 'running'

    def update(self):
        if self.view.update() != True:
            self.status = 'stopped'

runner = Runner()
while runner.status == 'running':
    runner.update()
