#!/usr/bin/env python
import _localpaths
from mocap_bridge.gui.manager_view import ManagerView
from mocap_bridge.gui.json_reader_view import JsonReaderView
from mocap_bridge.readers.json_reader import JsonReader

import Tkinter as tk

class GuiApp(tk.Frame):
    def __init__(self, master=None):
        tk.Frame.__init__(self, master)
        self.grid()
        self.setup()

    def setup(self):
        self.master.title('MoCap')
        self.manager_view = ManagerView(parent=self)

        # self.json_reader = JsonReader("data/sampleRecording3.json", manager=self.manager_view.manager)
        self.json_reader_view = JsonReaderView(parent=self)

        self.quitButton = tk.Button(self, text='Quit', command=self.quit)
        self.quitButton.grid()
        # self.update()

    # def update(self):
    #     self.after(1, self.update) # schedule next update (tkinter doesn't seem to provide a nice way to to every-iteration-updates)

app = GuiApp()
app.mainloop()
